# Avoid date/time taking up space
set -g status-right ''
set -g status-right-length 0

# Base-16
source-file ~/Software/base16-tmux/colors/base16-ayu-dark.conf

set -g status-left "#[bold] îž• #S "
set -g status-justify centre # center align window list
